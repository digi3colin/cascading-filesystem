{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "./classes",
    "declarationDir": "./types",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@lionrockjs/central": ["../../../system/central"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.mts"],
  "exclude": ["node_modules", "dist", "types"]
}
